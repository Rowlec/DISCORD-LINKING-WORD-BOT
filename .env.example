# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here

# AI Provider: "openai" or "anthropic"
AI_PROVIDER=openai
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# AI Model (e.g., gpt-4o-mini, gpt-4o, claude-3-haiku-20240307)
AI_MODEL=gpt-4o-mini

# Database URL
DATABASE_URL=sqlite+aiosqlite:///word_chain_bot.db

# Game Settings
DEFAULT_TIMER_SECONDS=30
MIN_PLAYERS=2
MAX_PLAYERS=10

# Timer update interval in seconds (how often the timer embed updates)
TIMER_UPDATE_INTERVAL=3

# Word cache expiry (days)
WORD_CACHE_EXPIRY_DAYS=30

# Development mode (set to true for debug logging)
DEV_MODE=false
