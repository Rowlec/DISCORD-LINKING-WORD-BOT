# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here

# AI Provider: "openai", "anthropic", "gemini", or "ollama"
AI_PROVIDER=ollama
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
OLLAMA_BASE_URL=http://localhost:11434

# AI Model (for ollama: gemma2, llama3, mistral, etc.)
AI_MODEL=gemma2

# Database URL
DATABASE_URL=sqlite+aiosqlite:///word_chain_bot.db

# Game Settings
DEFAULT_TIMER_SECONDS=30
MIN_PLAYERS=2
MAX_PLAYERS=10

# Timer update interval in seconds (how often the timer embed updates)
TIMER_UPDATE_INTERVAL=3

# Word cache expiry (days)
WORD_CACHE_EXPIRY_DAYS=30

# Development mode (set to true for debug logging)
DEV_MODE=false
